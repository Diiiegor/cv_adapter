# Archivo de configuración de variables de entorno
# Copia este archivo a .env y completa los valores

# Configuración de OpenAI (requerido)
OPENAI_API_KEY='********************'
TAVILY_API_KEY='*******************'
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.3

# Langsmith keys
LANGSMITH_API_KEY = '*******************'
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_PROJECT=cv-adapter

# Configuración del servidor
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Configuración de archivos
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Configuración de CORS (separado por comas)
# Para producción: https://tudominio.com,https://app.tudominio.com
ALLOWED_ORIGINS=*